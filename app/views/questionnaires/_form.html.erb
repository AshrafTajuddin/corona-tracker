<%= form_with(model: questionnaire, local: false, data: { controller: "questionnaire", target: "questionnaire.form" }) do |form| %>
  <% if questionnaire.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(questionnaire.errors.count, "error") %> prohibited this questionnaire from being saved:</h2>

      <ul>
        <% questionnaire.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="mx-auto max-w-lg flex" data-target="questionnaire.healthySickSelector">
    <div class="w-1/2 pr-1">
      <button class="h-16 w-full p-2 border border-white rounded hover:bg-gray-700" data-action="questionnaire#selectHealthy">Ich bin gesund</button>
    </div>
    <div class="w-1/2 pl-1">
      <button class="h-16 w-full p-2 border border-white rounded hover:bg-gray-700" data-action="questionnaire#selectSick">Ich bin krank</button>
    </div>
  </section>

  <section class="mx-auto max-w-lg" data-target="questionnaire.sickSelector" style="display:none">
    <div>
      <%= form.check_box :fever, data: { target: "questionnaire.fever" } %>
      <%= form.label :fever, "Ich habe (auch) Fieber", class: "ml-1" %>
    </div>
    <div>
      <%= form.check_box :cough, data: { target: "questionnaire.cough" } %>
      <%= form.label :cough, "Ich habe (auch) Husten", class: "ml-1" %>
    </div>
    <div class="mt-3 text-sm">
      Im n채chsten Schritt 체bermittelst du deinen Ort. Es wird nicht dein genauer Ort verwendet - sondern nur auf 20km genau.
    </div>
    <div class="mt-2">
      <button class="h-16 w-full p-2 border border-white rounded hover:bg-gray-700" data-action="questionnaire#confirmSubmit">Okay, weiter</button>
    </div>
  </section>

  <section class="mx-auto max-w-lg" data-target="questionnaire.locationHint" style="display:none">
    <div class="text-sm">
      Danke! Im n채chsten Schritt 체bermittelst du deinen Ort. Es wird nicht dein genauer Ort verwendet - sondern nur auf 20km genau.
    </div>
    <div class="mt-2">
      <button class="h-16 w-full p-2 border border-white rounded hover:bg-gray-700" data-action="questionnaire#confirmSubmit">Okay, weiter</button>
    </div>
  </section>

  <section class="mx-auto max-w-lg" data-target="questionnaire.locationStatus" style="display:none">
    <span class="text-sm">Einen Moment..</span>
  </section>

  <%= form.hidden_field :healthy, data: { target: "questionnaire.healthy" } %>

  <div>
    <%= form.fields_for :browser_location do |builder| %>
      <%= builder.hidden_field :lon, step: :any, data: { target: "questionnaire.lon" } %>
      <%= builder.hidden_field :lat, step: :any, data: { target: "questionnaire.lat" } %>
      <%= builder.hidden_field :accuracy, step: :any, data: { target: "questionnaire.accuracy" } %>
    <% end %>
  </div>
<% end %>
